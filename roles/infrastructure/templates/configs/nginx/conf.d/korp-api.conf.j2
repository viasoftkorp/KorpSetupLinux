{% if reverse_proxy.external %}
server {
    listen {{ reverse_proxy.http_ports.api }};

    include /etc/nginx/default_conf;

    include /etc/nginx/conf.d/korp-api.locations;
}
{% endif %}

server {
    server_name {{ dns.api }};

    include /etc/nginx/ssl_conf;
    include /etc/nginx/default_conf;

    include /etc/nginx/conf.d/korp-api.ssl-locations;
}
