version: "3.8"

x-extra_hosts:
  &default-extra_hosts
  - "db_mssql: $DB_MSSQL"
  - "app_server: $APP_SERVER"
  - "{{ frontend.dns.api }}: $API_GATEWAY"
  - "{{ frontend.dns.frontend }}: $PORTAL_GATEWAY"
  - "{{ frontend.dns.cdn }}: $CDN_GATEWAY"

networks:
  servicos:
    external:
      name: servicos

services:
  viasoft-relatorios:
    image: "korp/viasoft.relatorios:1.3.x"
    container_name: "Viasoft.Relatorios"
    restart: on-failure:10
    extra_hosts: *default-extra_hosts
    environment:
      - ON_PREMISE_MODE=true
      - URL_CONSUL=http://consul-server:8500
    networks:
      - servicos
    volumes:
      - "{{ self_signed_certs_directory }}/:{{ self_signed_certs_directory }}/"

  viasoft-reporting-pivottable:
    image: "korp/viasoft.reporting.pivottable:1.2.x"
    container_name: "Viasoft.Reporting.PivotTable"
    restart: on-failure:10
    extra_hosts: *default-extra_hosts
    environment:
      - ON_PREMISE_MODE=true
      - URL_CONSUL=http://consul-server:8500
    networks:
      - servicos
    volumes:
      - "{{ self_signed_certs_directory }}/:{{ self_signed_certs_directory }}/"
  
  viasoft-relatorios-agendador:
    image: "korp/viasoft.relatorios.agendador:1.2.x"
    container_name: "Viasoft.Relatorios.Agendador"
    restart: on-failure:10
    extra_hosts: *default-extra_hosts
    environment:
      - ON_PREMISE_MODE=true
      - URL_CONSUL=http://consul-server:8500
    networks:
      - servicos
    volumes:
      - "{{ self_signed_certs_directory }}/:{{ self_signed_certs_directory }}/"
