version: "3.8"

x-extra_hosts:
  &default-extra_hosts
  - "db_mssql: $DB_MSSQL"
  - "app_server: $APP_SERVER"
  - "{{ frontend.dns.api }}: $API_GATEWAY"
  - "{{ frontend.dns.frontend }}: $PORTAL_GATEWAY"
  - "{{ frontend.dns.cdn }}: $CDN_GATEWAY"

networks:
  servicos:
    external:
      name: servicos

services:
  LOG01_W:
    image: "korp/viasoft.logistics.product-frontend:2.1.x"
    container_name: "LOG01_W"
    restart: on-failure:10
    extra_hosts: *default-extra_hosts
    environment:
      - ON_PREMISE_MODE=true
      - GATEWAY_URL={{ frontend.endpoints.gateway_url }}
      - CDN_URL={{ frontend.endpoints.cdn_url }}
      - FRONTEND_URL={{ frontend.endpoints.frontend_url }}
    networks:
      - servicos
    volumes:
      - "{{ self_signed_certs_directory }}/:{{ self_signed_certs_directory }}/"

  viasoft-logistics-products:
    image: "korp/viasoft.logistics.products:3.0.x"
    container_name: "Viasoft.Logistics.Products"
    restart: on-failure:10
    extra_hosts: *default-extra_hosts
    environment:
      - ON_PREMISE_MODE=true
      - URL_CONSUL=http://consul-server:8500
    networks:
      - servicos
    volumes:
      - "{{ self_signed_certs_directory }}/:{{ self_signed_certs_directory }}/"
