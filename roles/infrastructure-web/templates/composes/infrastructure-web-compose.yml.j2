      - viasoft-tenantmanagement
    environment:
      - ON_PREMISE_MODE=true
      - URL_CONSUL=http://consul-server:8500
      - URL_CDN=https://korp-cdn
      - URL_LOADER=https://korp
    volumes:
      - "{{ self_signed_certs_directory }}/:{{ self_signed_certs_directory }}/"
