version: "3.8"

x-extra_hosts:
  &default-extra_hosts
  - "db_mssql: $DB_MSSQL"
  - "app_server: $APP_SERVER"
  - "korp-api: $API_GATEWAY"
  - "korp: $PORTAL_GATEWAY"
  - "korp-cdn: $CDN_GATEWAY"

networks:
  servicos:
    external:
      name: servicos

services:
  viasoft-core-hybridproxy:
    image: "korp/viasoft.core.hybridproxy:1.0.x"
    container_name: "Viasoft.Core.HybridProxy"
    restart: always
    extra_hosts: *default-extra_hosts
    environment:
      - ON_PREMISE_MODE=true
      - URL_CONSUL=http://consul-server:8500
      - GATEWAY_HOST=fabio
      - ROUTES_ENDPOINT=http://fabio:9998/api/routes
    volumes:
      - "{{ self_signed_certs_directory }}/:{{ self_signed_certs_directory }}/"
    networks:
      - servicos 

  viasoft-tenantmanagement:
    image: "korp/viasoft.tenantmanagement:1.3.x"
    container_name: "Viasoft.TenantManagement"
    restart: always
    extra_hosts: *default-extra_hosts
    depends_on:
      - viasoft-core-hybridproxy
    environment:
      - ON_PREMISE_MODE=true
      - URL_CONSUL=http://consul-server:8500
      - URL_CDN=https://korp-cdn
      - URL_LOADER=https://korp
    volumes:
      - "{{ self_signed_certs_directory }}/:{{ self_signed_certs_directory }}/"
    networks:
      - servicos

  viasoft-portal:
    image: "korp/viasoft.portal:1.5.x"
    container_name: "Viasoft.Portal"
    restart: always
    extra_hosts: *default-extra_hosts
    depends_on:
      - viasoft-tenantmanagement
    environment:
      - ON_PREMISE_MODE=true
      - URL_CONSUL=http://consul-server:8500
      - URL_CDN=https://korp-cdn
      - URL_LOADER=https://korp
    volumes:
      - "{{ self_signed_certs_directory }}/:{{ self_signed_certs_directory }}/"
    networks:
      - servicos

  viasoft-authorization:
    image: "korp/viasoft.authorization:1.3.x"
    container_name: "Viasoft.Authorization"
    restart: always
    extra_hosts: *default-extra_hosts
    depends_on:
      - viasoft-tenantmanagement
    environment:
      - ON_PREMISE_MODE=true
      - URL_CONSUL=http://consul-server:8500
      - URL_CDN=https://korp-cdn
      - URL_LOADER=https://korp
    volumes:
      - "{{ self_signed_certs_directory }}/:{{ self_signed_certs_directory }}/"
    networks:
      - servicos

  viasoft-portal-frontend:
    image: "korp/viasoft.portal-frontend:3.0.x"
    container_name: "portal"
    restart: always
    extra_hosts: *default-extra_hosts
    depends_on:
      - viasoft-portal
    environment:
      - ON_PREMISE_MODE=true
    volumes:
      - "{{ self_signed_certs_directory }}/:{{ self_signed_certs_directory }}/"
    networks:
      - servicos

  viasoft-notification:
    image: "korp/viasoft.notification:1.3.x"
    container_name: "Viasoft.Notification"
    restart: always
    extra_hosts: *default-extra_hosts
    environment:
      - ON_PREMISE_MODE=true
      - URL_CONSUL=http://consul-server:8500
    volumes:
      - "{{ self_signed_certs_directory }}/:{{ self_signed_certs_directory }}/"
    networks:
      - servicos

  viasoft-administration:
    image: "korp/viasoft.administration:1.4.x"
    container_name: "Viasoft.Administration"
    restart: always
    extra_hosts: *default-extra_hosts
    depends_on:
      - viasoft-tenantmanagement
    environment:
      - ON_PREMISE_MODE=true
      - URL_CONSUL=http://consul-server:8500
    volumes:
      - "{{ self_signed_certs_directory }}/:{{ self_signed_certs_directory }}/"
    networks:
      - servicos

  viasoft-reporting-stimulsoft:
    image: "korp/viasoft.reporting.stimulsoft:1.2.x"
    container_name: "Viasoft.Reporting.Stimulsoft"
    restart: always
    extra_hosts: *default-extra_hosts
    depends_on:
      - viasoft-tenantmanagement
    environment:
      - ON_PREMISE_MODE=true
      - URL_CONSUL=http://consul-server:8500
    volumes:
      - "{{ self_signed_certs_directory }}/:{{ self_signed_certs_directory }}/"
    networks:
      - servicos

  viasoft-reporting:
    image: "korp/viasoft.reporting:1.4.x"
    container_name: "Viasoft.Reporting"
    restart: always
    extra_hosts: *default-extra_hosts
    depends_on:
      - viasoft-tenantmanagement
    environment:
      - ON_PREMISE_MODE=true
      - URL_CONSUL=http://consul-server:8500
    volumes:
      - "{{ self_signed_certs_directory }}/:{{ self_signed_certs_directory }}/"
    networks:
      - servicos
