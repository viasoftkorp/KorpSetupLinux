version: "3.8"

x-extra_hosts:
  &default-extra_hosts
  - "db_mssql: $DB_MSSQL"
  - "korp-api: $API_GATEWAY"
  - "korp: $PORTAL_GATEWAY"
  - "korp-cdn: $CDN_GATEWAY"

networks:
  servicos:
    external:
      name: servicos

services:
  viasoft-portal:
    image: "korp/viasoft.portal:1.5.x"
    container_name: "Viasoft.Portal"
    restart: always
    extra_hosts: *default-extra_hosts
    environment:
      - ON_PREMISE_MODE=true
      - URL_CONSUL=http://consul-server:8500
      - URL_CDN=https://korp-cdn
      - URL_LOADER=https://korp
    volumes:
      - "{{ self_signed_certs_directory }}/:{{ self_signed_certs_directory }}/"
    networks:
      - servicos

  korp-legacy-administration:
    image: "korp/korp.legacy.administration:1.2.x"
    container_name: "Korp.Legacy.Administration"
    restart: always
    extra_hosts: *default-extra_hosts
    environment:
      - ON_PREMISE_MODE=true
      - URL_CONSUL=http://consul-server:8500
    volumes:
      - "{{ self_signed_certs_directory }}/:{{ self_signed_certs_directory }}/"
    networks:
      - servicos

  korp-legacy-authorization-2021-4-0:
    image: "korp/korp.legacy.authorization:2021.4.0.x"
    container_name: "Korp.Legacy.Authorization-2021.4.0"
    restart: always
    extra_hosts: *default-extra_hosts
    environment:
      - ON_PREMISE_MODE=true
      - URL_CONSUL=http://consul-server:8500
    volumes:
      - "{{ self_signed_certs_directory }}/:{{ self_signed_certs_directory }}/"
    networks:
      - servicos

  korp-legacy-tenantmanagement:
    image: "korp/korp.legacy.tenantmanagement:1.0.x"
    container_name: "Korp.Legacy.TenantManagement"
    restart: always
    extra_hosts: *default-extra_hosts
    environment:
      - ON_PREMISE_MODE=true
      - URL_CONSUL=http://consul-server:8500
    volumes:
      - "{{ self_signed_certs_directory }}/:{{ self_signed_certs_directory }}/"
    networks:
      - servicos

  viasoft-reporting:
    image: "korp/viasoft.reporting:1.3.x"
    container_name: "Viasoft.Reporting"
    restart: always
    extra_hosts: *default-extra_hosts
    environment:
      - ON_PREMISE_MODE=true
      - URL_CONSUL=http://consul-server:8500
    volumes:
      - "{{ self_signed_certs_directory }}/:{{ self_signed_certs_directory }}/"
    networks:
      - servicos

  viasoft-reporting-stimulsoft:
    image: "korp/viasoft.reporting.stimulsoft:1.1.x"
    container_name: "Viasoft.Reporting.Stimulsoft"
    restart: always
    extra_hosts: *default-extra_hosts
    environment:
      - ON_PREMISE_MODE=true
      - URL_CONSUL=http://consul-server:8500
    volumes:
      - "{{ self_signed_certs_directory }}/:{{ self_signed_certs_directory }}/"
    networks:
      - servicos
