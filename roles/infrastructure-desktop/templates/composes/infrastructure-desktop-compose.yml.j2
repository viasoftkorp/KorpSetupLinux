version: "3.8"

x-extra_hosts:
  &default-extra_hosts
  - "db_mssql: $DB_MSSQL"
  - "app_server: $APP_SERVER"
  - "korp-api: $API_GATEWAY"
  - "korp: $PORTAL_GATEWAY"
  - "korp-cdn: $CDN_GATEWAY"

networks:
  servicos:
    external:
      name: servicos

services:
  viasoft-audittrail-client:
    image: "korp/viasoft.audittrail.client:3.2.x"
    container_name: "Viasoft.Audittrail.Client"
    restart: always
    extra_hosts: *default-extra_hosts
    environment:
      - ON_PREMISE_MODE=true
      - URL_CONSUL=http://consul-server:8500
    volumes:
      - "{{ self_signed_certs_directory }}/:{{ self_signed_certs_directory }}/"
      # Caso seja alterado o caminho dentro do container, deve-se atualizar o código do serviço
      - "{{ dados_docker_dir_path }}/viasoft-audittrail-client/:/app/data/"
    networks:
      - servicos

  viasoft-email:
    image: "korp/viasoft.email:1.3.x"
    container_name: "Viasoft.Email"
    restart: always
    extra_hosts: *default-extra_hosts
    environment:
      - ON_PREMISE_MODE=true
      - URL_CONSUL=http://consul-server:8500
    volumes:
      - "{{ self_signed_certs_directory }}/:{{ self_signed_certs_directory }}/"
      # Caso seja alterado o caminho dentro do container, deve-se atualizar as props 'DatabasePath' e 'ErrorPath' no KV do consul
      - "{{ dados_docker_dir_path }}/viasoft-email/data/:/app/data"
      - "{{ dados_docker_dir_path }}/viasoft-email/errors/:/app/errors"
    networks:
      - servicos

  korp-legacy-authentication:
    image: "korp/korp.legacy.authentication:1.5.x"
    container_name: "Korp.Legacy.Authentication"
    restart: always
    extra_hosts: *default-extra_hosts
    environment:
      - ON_PREMISE_MODE=true
      - URL_CONSUL=http://consul-server:8500
    volumes:
      - "{{ self_signed_certs_directory }}/:{{ self_signed_certs_directory }}/"
    networks:
      - servicos

  viasoft-legacy-httpproxy:
    image: "korp/viasoft.legacy.httpproxy:1.2.x"
    container_name: "Viasoft.Legacy.Httpproxy"
    restart: always
    extra_hosts: *default-extra_hosts
    environment:
      - ON_PREMISE_MODE=true
      - URL_CONSUL=http://consul-server:8500
    volumes:
      - "{{ self_signed_certs_directory }}/:{{ self_signed_certs_directory }}/"
    networks:
      - servicos

  viasoft-welcomepage-dashboard:
    image: "korp/viasoft.welcomepage.dashboard:1.4.x"
    container_name: "Viasoft.WelcomePage.Dashboard"
    restart: always
    extra_hosts: *default-extra_hosts
    environment:
      - ON_PREMISE_MODE=true
      - URL_CONSUL=http://consul-server:8500
    volumes:
      - "{{ self_signed_certs_directory }}/:{{ self_signed_certs_directory }}/"
    networks:
      - servicos

  minio-server:
    image: "minio/minio:RELEASE.2020-08-16T18-39-38Z"
    container_name: "minio-server"
    command: "server /data"
    restart: always
    environment:
      - MINIO_ACCESS_KEY={{ minio.access_key }}
      - MINIO_SECRET_KEY={{ minio.secret_key }}
    ports:
      - "9110:9000"
    volumes:
      - "{{ dados_docker_dir_path }}/minio-server/:/data"
    networks:
      - servicos
    labels:
      com.centurylinklabs.watchtower.enable: false

  viasoft-systemupdate:
    image: "korp/viasoft.systemupdate:1.2.x"
    container_name: "Viasoft.SystemUpdate"
    restart: always
    extra_hosts: *default-extra_hosts
    environment:
      - ON_PREMISE_MODE=true
      - URL_CONSUL=http://consul-server:8500
    volumes:
      - "{{ self_signed_certs_directory }}/:{{ self_signed_certs_directory }}/"
      - "{{ korp_dir_path }}/atualizacao-sistema/:/etc/korp/atualizacao-sistema/"
    networks:
      - servicos

  viasoft-integration-ecommerce:
    image: "korp/viasoft.integration.ecommerce:1.0.x"
    container_name: "Viasoft.Integration.Ecommerce"
    restart: always
    extra_hosts: *default-extra_hosts
    environment:
      - ON_PREMISE_MODE=true
      - URL_CONSUL=http://consul-server:8500
    volumes:
      - "{{ self_signed_certs_directory }}/:{{ self_signed_certs_directory }}/"
      - "{{ dados_docker_dir_path }}/viasoft-integration-ecommerce/:/etc/korp/database/"
    networks:
      - servicos
