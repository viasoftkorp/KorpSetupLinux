version: "3.8"

x-extra_hosts:
  &default-extra_hosts
  - "db_mssql:$DB_MSSQL"
  - "testing_db_mssql:$TESTING_DB_MSSQL" 
  - "app_server:$APP_SERVER"
  - "{{ dns.api }}:$API_GATEWAY"
  - "{{ dns.frontend }}:$PORTAL_GATEWAY"
  - "{{ dns.cdn }}:$CDN_GATEWAY"
  - "{{ dns.api_gateway }}:$API_GATEWAY_GATEWAY"

networks:
  servicos:
    external:
      name: servicos

services:
  korp-producao-apontamento-2023-1-0:
    image: "{{ docker_account }}/korp.producao.apontamento:2023.1.0.x{{ docker_image_suffix }}"
    container_name: "Korp.Producao.Apontamento-2023.1.0"
    restart: unless-stopped
    extra_hosts: *default-extra_hosts
    environment:
      - ON_PREMISE_MODE=true
      - USE_SERVERGC=$USE_SERVERGC
      - URL_CONSUL=http://consul-server:8500
      - CERT_FILE_PATH={{ containers_cert_path }}
    networks:
      - servicos
    volumes:
      - "{{ certs_directory }}/:{{ certs_directory }}/"
      - "{{ dados_docker_dir_path }}/PRO09/reports/:/app/reports/"

  PRO09-2023-1-0:
    image: "{{ docker_account }}/korp.producao.apontamento-frontend:2023.1.0.x{{ docker_image_suffix }}"
    container_name: "PRO09-2023.1.0"
    restart: unless-stopped
    extra_hosts: *default-extra_hosts
    environment:
      - ON_PREMISE_MODE=true
      - USE_SERVERGC=$USE_SERVERGC
      - GATEWAY_URL={{ frontend.endpoints.gateway_url }}
      - CDN_URL={{ frontend.endpoints.cdn_url }}
      - FRONTEND_URL={{ frontend.endpoints.frontend_url }}
      - CERT_FILE_PATH={{ containers_cert_path }}
    networks:
      - servicos
    volumes:
      - "{{ certs_directory }}/:{{ certs_directory }}/"
